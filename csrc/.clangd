InlayHints:
  Designators: Yes
  Enabled: Yes
  DeducedTypes: Yes

Hover:
  ShowAKA: Yes

CompileFlags:
  Add:
    - "--cuda-gpu-arch=sm_80"
    # - "--gcc-toolchain=/orcd/software/core/001/spack/pkg/gcc/12.2.0/yt6vabm"
    - "-std=c++20"
    - "-I/usr/include/c++/13"
    - "-I/usr/include/x86_64-linux-gnu/c++/13"
    - "-Wno-class-conversion"
    - "-DCLANGD=1"
  Remove:
    - "--compiler-options"
    - "--dependency-output"
    - "--expt-relaxed-constexpr"
    - "--generate-dependencies-with-compile"
    - "--keep"
    - "--ptxas*"
    - "-ccbin"
    - "-gencode"
